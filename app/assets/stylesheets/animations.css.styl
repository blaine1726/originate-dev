.proj-animation-container
  width 100%
  height 100%
  position fixed

.phone-bg
  position fixed
  max-width 300px
  max-height 608px
  top calc(50% - 300px)
  left calc(50% - 150px)

.phone-inner-bg
  width 100%
  height 100%

.phone-screen
  position fixed
  height 462px
  width 260px
  background-color black
  left calc(50% - 130px)
  top calc(50% - 226px)
  overflow hidden

.phone-img
  height 100%

.draggable
  width 150px
  height 150px
  background-color white

.orbit
  position absolute
  overflow none
  padding 0
  -webkit-transition width, height 0.15s ease-in-out
  -o-transition width, height 0.15s ease-in-out
  transition width, height 0.15s ease-in-out
  -webkit-box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
  -moz-box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);

.drag-img
  max-width 100%
  max-height 100%
  height 100%

#phone-img-1
  height 100%
  width 100%

.down
  -webkit-transition margin-top 0.3s ease-in-out
  -o-transition margin-top 0.3s ease-in-out
  transition margin-top 0.3s ease-in-out
  margin-top 462px

.up
  -webkit-transition margin-top 0.3s ease-in-out
  -o-transition margin-top 0.3s ease-in-out
  transition margin-top 0.3s ease-in-out
  margin-top 0

.bg-square
  -webkit-box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
  -moz-box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);

@-webkit-keyframes myOrbit {
    from { -webkit-transform: rotate(0deg) translateX(10px) rotate(0deg); }
    to   { -webkit-transform: rotate(360deg) translateX(10px) rotate(-360deg); }
}

@-moz-keyframes myOrbit {
    from { -moz-transform: rotate(0deg) translateX(10px) rotate(0deg); }
    to   { -moz-transform: rotate(360deg) translateX(10px) rotate(-360deg); }
}

@-o-keyframes myOrbit {
    from { -o-transform: rotate(0deg) translateX(10px) rotate(0deg); }
    to   { -o-transform: rotate(360deg) translateX(10px) rotate(-360deg); }
}

@keyframes myOrbit {
    from { transform: rotate(0deg) translateX(10px) rotate(0deg); }
    to   { transform: rotate(360deg) translateX(10px) rotate(-360deg); }
}

#orbit-0
  -webkit-animation myOrbit 5s linear infinite
  -moz-animation myOrbit 5s linear infinite
  -o-animation myOrbit 5s linear infinite
  animation myOrbit 5s linear infinite

#orbit-1
  -webkit-animation myOrbit 4s linear infinite
  -moz-animation myOrbit 4s linear infinite
  -o-animation myOrbit 4s linear infinite
  animation myOrbit 4s linear infinite

#orbit-2
  -webkit-animation myOrbit 3.5s linear infinite
  -moz-animation myOrbit 3.5s linear infinite
  -o-animation myOrbit 3.5s linear infinite
  animation myOrbit 3.5s linear infinite

#orbit-3
  -webkit-animation myOrbit 4.5s linear infinite
  -moz-animation myOrbit 4.5s linear infinite
  -o-animation myOrbit 4.5s linear infinite
  animation myOrbit 4.5s linear infinite

#orbit-4
  -webkit-animation myOrbit 5.5s linear infinite
  -moz-animation myOrbit 5.5s linear infinite
  -o-animation myOrbit 5.5s linear infinite
  animation myOrbit 5.5s linear infinite
