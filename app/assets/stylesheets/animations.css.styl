@import 'params.styl'

light-gray = #d3d3d3
medium-gray = #a6a6a6
dark-gray = #737373
black = #000000
off-black = #0d0d0d

html, body
  width 100%
  height 100%
  padding 0
  margin 0
  font-family originate-circular-medium

/* Background Animation */

pathNumber = 18
firstColor = #0057B8;
listColors = #F11E4A, #F8A527, #266D7F, #82A, $firstColor
delayCoeff = 0.1s

#canvas
  width 100%
  height 100%

#animating-tile
  width 100px
  height 100px
  position absolute
  animation pulse 4s infinite

.animate
  opacity 0

.visible
  animation visible .8s ease forwards

.invisible
  animation invisible .4s ease forwards

.slide-up
  opacity 0
  animation: slide-up .8s ease forwards

//this makes them appear staggered
.slide-up:nth-child(odd)
  animation-duration .5s

.animation-frame
  width wrap-content
  height wrap-content

for num in (1..12)
  .visible:nth-child({num})
    animation-delay: .1s * num

.animate.long-animation
  animation-duration: 1.5s

@keyframes visible
  from
    transform: scale(1.1);
    opacity 0
    transform: translateY(30px);
  to
    transform: scale(1.0);
    opacity 1
    transform: translateY(0);

@keyframes invisible
  from
    transform scale(1.0)
    opacity 1
    transform translateY(0)
  to
    transform scale(1.4)
    opacity 0
    transform translateY(30px)

@keyframes slide-up
  from
    transform: translateY(150px);
  to
    opacity 1
    transform: translateY(0);

@keyframes pulse
  0%, 100%
    background-color #001F3F
    top 0px
  50%
    background-color #FF4136
    top 100px

.full-screen
  min-width 100%
  min-height 100%
  top 0
  left 0

/*------------ HOME SCREEN ------------*/

svg
  padding space*15

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

//O
@keyframes fade-1
  from
    // transform: translate(-4px, -4px) scale(1.5)
    opacity 0
  to
    // transform: translate(0, 0) scale(1.0)
    opacity 1

.fade-in
  opacity 0
  &.one //This is the r
    animation fade-1 1.5s ease forwards
    animation-delay 1s
  &.two //This is the i (after the r)
    animation fade-1 1.5s ease forwards
    animation-delay .5s
  &.three //This is the second i
    animation fade-1 1.5s ease forwards
    animation-delay 1.5s
  &.four //This is the n
    animation fade-1 1.5s ease forwards
    animation-delay .8s
  &.five //This is the a
    animation fade-1 1.5s ease forwards
    animation-delay 1.8s
  &.six //This is the g (for some strange reason)
    animation fade-1 1.5s ease forwards
    animation-delay 1.2s
  &.seven, &.eight //This is the last e and the R
    animation fade-1 1.5s ease forwards
    animation-delay 2.1s
  &.nine //The beginning O
    animation fade-1 1.5s ease forwards
    animation-delay .6s
  &.ten //This is the t
    animation fade-1 1.5s ease forwards
    animation-delay 1s

