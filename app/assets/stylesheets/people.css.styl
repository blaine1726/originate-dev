@import 'params.styl'

/*---------- Stylus file for the people page ----------*/

.people-tile
  position relative
  width space*14
  height space*3
  margin space space space 0
  float left
  overflow hidden

.placeholder
  width space*14
  height space*3
  z-index -1
  background-color white

.people-outer
  position relative
  width space*14
  height space*3
  // margin space*2 space space*2 0
  float left
  // -webkit-transition all 0.25s ease-in-out
  // -o-transition all 0.25s ease-in-out
  // transition all 0.25s ease-in-out
  &.show
    margin 0
    position fixed
    left 0
    top 0
    transition top, left, background 0.35s ease-in-out
    // padding-left "calc(50% - (%s * 16))" % space
    // padding-top "calc(25% - (%s * 8))" % space
    text-align center
    z-index 10
    width 100%
    height 100%
    background rgba(0, 0, 0, .5);

.people-inner
  -webkit-transition all 0.25s ease-in-out
  -o-transition all 0.25s ease-in-out
  transition all 0.25s ease-in-out
  width space*16
  height space*4
  z-index 11

.people-outer.show > .people-inner
  -webkit-transition all 0.35s ease-in-out
  -o-transition all 0.35s ease-in-out
  transition all 0.35s ease-in-out
  position fixed
  left 50%
  top 50%
  margin-left - space*16 //Accounts for the padding below
  margin-top - space*10
  width space*30
  height space*20
  background-color white
  padding space
  cursor default

.people-outer.show .people-inner .people-base
  height space*6
  border-bottom 1px solid medium-gray

.people-outer.show .people-inner .people-base .people-pic-container
  width space*5
  height space*5

// .people-outer.show .people-inner .people-description
//   float none

.people-outer.show .people-inner .people-base .people-pic-container .profile-pic
  width space*4
  height space*4
  border-radius space*2
  box-sizing border-box

.people-outer.show .people-inner .people-base .people-description .people-name
  font-size space*1.3

.people-outer.show .people-inner .people-extra,
.people-outer.show .people-inner .people-base .social-outer
  -webkit-transition opacity 0.35s ease-in-out
  -o-transition opacity 0.35s ease-in-out
  transition opacity 0.35s ease-in-out
  transition-delay .25s
  opacity 1
  visibility visible

.people-pic-container
  -webkit-transition all 0.35s ease-in-out
  -o-transition all 0.35s ease-in-out
  transition all 0.35s ease-in-out
  width space*3
  height space*3
  vertical-align middle
  float left

.profile-pic
  -webkit-transition all 0.35s ease-in-out
  -o-transition all 0.35s ease-in-out
  transition all 0.35s ease-in-out
  width space*3
  height space*3
  border-radius space*1.5
  border 1px solid medium-gray
  box-sizing border-box

.people-description
  float left
  text-align left
  padding-top space*.5
  padding-left space*1.3

.people-name
  font-size space*.9
  font-weight bold

.people-options
  width 100%

.social-outer
  z-index 15
  cursor pointer
  opacity 0

.people-extra
  -webkit-transition opacity 0.35s ease-in-out
  -o-transition opacity 0.35s ease-in-out
  transition opacity 0.35s ease-in-out
  opacity 0
  display block
  float none
  width 100%
  text-align center
  font-size space
  font-weight lighter
  padding space*4 space 0 space
  box-sizing border-box
  visibility hidden

.people-tags, .people-search
  width 50%
  @media only screen and (max-width: 768px)
    width "calc(100% - (%s * 2))" % space
    margin space
    box-sizing: border-box;

.people-tags
  float left
  text-align left

.tag-container
  width 100%
  height space*2
  margin-top space*.5
  cursor pointer
  position relative

.people-tag
  width space*8
  padding-bottom space*.5
  float left

.people-search
  float right

.people-search-text
  float right
  border 1px solid medium-gray
  background-color very-light-gray
  padding space*.4
  width 75%
  min-width space*16
  @media only screen and (max-width: 768px)
    width 100%

.first-person
  width 100%
  height space*9
